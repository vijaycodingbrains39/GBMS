@model IEnumerable<BAL.Lines>


<div class="container">

    <div class="row">

        <div class="col-sm-6">


        </div>
        <div class="col-sm-6">

        </div>

    </div>


</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Line)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LineNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.WrhsID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExtPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Line)
        </td>
  

        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LineNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @{
                 var Price = '$' + item.Price;
                @Html.DisplayFor(modelItem => Price)

            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WrhsID)
        </td>
        <td>
            @{
                var disdount = item.Discount + '%';
                @Html.DisplayFor(modelItem => disdount);
            }


        </td>
        <td>
            @{
                var ExtPrice = '$' + item.ExtPrice;
                @Html.DisplayFor(modelItem => ExtPrice)
            }

        </td>
    </tr>
    }

</table>
